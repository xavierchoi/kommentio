                google: false, github: false, facebook: false, twitter: false,
                apple: false, linkedin: false, kakao: true, line: true
            });
        }

        function enableBusinessProviders() {
            updateProviders({
                google: false, github: false, facebook: false, twitter: false,
                apple: true, linkedin: true, kakao: false, line: false
            });
        }

        function disableAllProviders() {
            updateProviders({
                google: false, github: false, facebook: false, twitter: false,
                apple: false, linkedin: false, kakao: false, line: false
            });
        }

        function updateProviders(config) {
            if (window.kommentio) {
                const providerConfig = {
                    google: { enabled: config.google, label: 'Google', color: '#4285f4', icon: 'üîç' },
                    github: { enabled: config.github, label: 'GitHub', color: '#333', icon: 'üêô' },
                    facebook: { enabled: config.facebook, label: 'Facebook', color: '#1877f2', icon: 'üìò' },
                    twitter: { enabled: config.twitter, label: 'X.com', color: '#000', icon: 'üê¶' },
                    apple: { enabled: config.apple, label: 'Apple', color: '#000', icon: 'üçé' },
                    linkedin: { enabled: config.linkedin, label: 'LinkedIn', color: '#0077b5', icon: 'üíº' },
                    kakao: { enabled: config.kakao, label: 'Ïπ¥Ïπ¥Ïò§ÌÜ°', color: '#fee500', icon: 'üí¨' },
                    line: { enabled: config.line, label: 'LINE', color: '#00b900', icon: 'üíö' }
                };
                window.kommentio.updateSocialProviders(providerConfig);
            }
        }

        // Î∂ÄÎìúÎü¨Ïö¥ Ïä§ÌÅ¨Î°§
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
